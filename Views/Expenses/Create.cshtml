@model ERManager.ViewModels.Expenses.ExpensesViewModel

@{
    ViewData["Title"] = "Create Expense";
}

<div id="form">

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">تێبینی</label>
                <input asp-for="Description"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Enter a brief description of the expense" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Amount -->
            <div class="form-group mb-3">
                <label asp-for="Amount" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">بڕ</label>
                <input asp-for="Amount"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Enter the amount spent" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

           <!-- Created At -->
            <div class="form-group mb-3">
              <label asp-for="CreatedAt" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">بەروار</label>
              <input asp-for="CreatedAt"  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
              <span asp-validation-for="CreatedAt" class="text-danger"></span>
           </div>

            <!-- Treasury Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="TreasuryId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">قاسە</label>
                <select asp-for="TreasuryId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 select2" asp-items="ViewBag.TreasuryId"></select>
                <span asp-validation-for="TreasuryId" class="text-danger"></span>
            </div>

            <!-- Category Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">جۆر</label>
                <select asp-for="CategoryId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 select2" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

       
            <button type="submit" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                    Create Expense
        </button>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Include jQuery first -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Include Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- Include Select2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <!-- Include Select2 Bootstrap theme -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-5-theme/1.2.2/select2-bootstrap-5.min.css" rel="stylesheet" />

    <!-- Initialize Select2 -->
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
        });
    </script>
}

</div>