@model IEnumerable<ERManager.Models.TreasuryMoneyTransfer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SourceTreasury)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationTreasury)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SourceTreasury.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationTreasury.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransferId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransferId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransferId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
